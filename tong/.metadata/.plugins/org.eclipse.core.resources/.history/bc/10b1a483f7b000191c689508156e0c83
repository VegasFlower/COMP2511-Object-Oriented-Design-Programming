package unsw.automata;


import javafx.beans.property.BooleanProperty;
import javafx.beans.property.SimpleBooleanProperty;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.CheckBox;
import javafx.scene.layout.GridPane;

public class GameOfLifeController {

    @FXML
    private GridPane cell;
    
    @FXML
    private Button play;
    
    private GameOfLife g;

    public GameOfLifeController() {
    	this.g = new GameOfLife();
//    	for(int i=0;i<10;i++) {
//    		for(int j=0;j<10;j++) {    			
//    		    Node result = cell.getChildren().get(i*10+j);
//    			g.cellProperty(i,j).bindBidirectional(result.cellProperty(i,j));
//    		}
//    	}
    }

    @FXML
    public void handleTick(ActionEvent event) {
    	g.tick();
    }

    @FXML
    public void restart(ActionEvent event) {
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			g.ensureDead(i, j);
    		}
    	}
    }
    
    @FXML
    public void initialize() {
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			CheckBox c = new CheckBox();
//    			BooleanProperty selected = new SimpleBooleanProperty();
//    			selected = c.selectedProperty();
    			g.cellProperty(i,j).bindBidirectional(c.selectedProperty());
    			this.cell.add(c,i,j);
    		}
    	}
    }
}

