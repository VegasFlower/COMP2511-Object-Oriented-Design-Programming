package unsw.movies;

public class Classic implements Price{

	@Override
	public double getCharge(int daysRented) {
		// TODO Auto-generated method stub
		double charge;
		if(daysRented <= 5) {
			charge = 2;
			return charge;
		}else {
			charge = 2;	
			return charge + (daysRented - 5);
		}
	}

	@Override
	public void changePrice() {
		// TODO Auto-generated method stub
		
	}

}
