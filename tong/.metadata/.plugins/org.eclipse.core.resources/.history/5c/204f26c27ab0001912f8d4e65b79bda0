package unsw.automata;

import javafx.beans.property.Property;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.CheckBox;
import javafx.scene.layout.GridPane;

public class GameOfLifeController {

    @FXML
    private GridPane cell;
    
    @FXML
    private Button play;
    
    private GameOfLife g;

    public GameOfLifeController() {
    	this.g = new GameOfLife();
//    	this.initialize();
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			g.cellProperty(i,j).bindBidirectional(cell.gridLinesVisibleProperty());
    		}
    	}
    }

    @FXML
    public void handleTick(ActionEvent event) {
    	g.tick();
    }

    @FXML
    public void restart(ActionEvent event) {
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			g.ensureDead(i, j);
    		}
    	}
    }
    @FXML
    public void initialize() {
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			CheckBox c = new CheckBox();
    			this.cell.add(c,i,j);
//    			g.cellProperty(i,j).bindBidirectional(cell.cellProperty(i,j));
    		}
    	}
    }
}

