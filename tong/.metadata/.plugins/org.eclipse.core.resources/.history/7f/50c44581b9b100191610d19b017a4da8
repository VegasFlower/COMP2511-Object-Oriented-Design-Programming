package unsw.automata;


import javafx.animation.KeyFrame;
import javafx.animation.KeyValue;
import javafx.animation.Timeline;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.CheckBox;
import javafx.scene.layout.GridPane;
import javafx.util.Duration;

public class GameOfLifeController {

	private int sign = 1;
	private Timeline timeline;
	
    @FXML
    private GridPane cell;
    
    @FXML
    private Button play;
    
    private GameOfLife g;

    public GameOfLifeController() {
    	this.g = new GameOfLife();
    	this.timeline = new Timeline();
//    	timeline.setCycleCount(Timeline.INDEFINITE);
//    	timeline.setAutoReverse(true);
    	
//    	KeyValue v = new KeyValue(sign, 1);
//		KeyFrame k = new KeyFrame(Duration.ofMillis(500), v);
//    	timeline.getKeyFrames().add(k);
    	
    	
//    	timeline.play();

    }

    @FXML
    public void handleTick(ActionEvent event) {
    	g.tick();
    }

    @FXML
    public void restart(ActionEvent event) {
    	if(play.getText().equals("Play")) {
//        	timeline.setCycleCount(Timeline.INDEFINITE);
//        	timeline.setAutoReverse(true);
    		timeline.getKeyFrames().add(new KeyFrame(Duration.seconds(0.5)));
    		timeline.setOnFinished((e)->{
    			this.g.tick();
    			timeline.play();
    		});
    		timeline.play();
    		play.setText("Stop");
    	}else {
    		sign = 1;
//    		timeline.stop();
    	}
    }
    
    @FXML
    public void initialize() {
    	for(int i=0;i<10;i++) {
    		for(int j=0;j<10;j++) {
    			CheckBox c = new CheckBox();
    			this.cell.add(c,i,j);
    			g.cellProperty(i,j).bindBidirectional(c.selectedProperty());
    		}
    	}
    }
}

